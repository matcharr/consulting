<div class='container d-flex justify-content-center'>
  <div>
    <h2>Edition du compte</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label "Prénom" %><br />
        <%= f.text_field :first_name%>
      </div>

      <div class="form-group">
        <%= f.label "Nom" %><br />
        <%= f.text_field :last_name %>
      </div>    

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.label "Nouveau mot de passe" %><br /><i>(À compléter seulement en cas de changement de mot de passe)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label "Confirmer le nouveau mot de passe" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class='form-group'>
        <%= check_box( :user, :newsletter, {}, true, "false" )%>
        <%= f.label :newsletter, 'Recevoir la newsletter'%>
      </div>   

      <div class="form-group">
        <%= f.label "Mot de passe actuel" %><br /> <i>(Nous avons besoin de votre mot de passe  actuel pour confirmer le changement de mot de passe)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Envoyer" , class: 'btn btn-primary'%>
      </div>
    <% end %>
    <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Etes vous sûr?" }, method: :delete, class: " btn btn-outline-warning"%></p>

    <%= link_to "Retour", :back %>
  </div>
</div>