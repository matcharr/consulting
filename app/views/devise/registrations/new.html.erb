<div class='container d-flex justify-content-center text-center'>
  <div class='card'>
    <div class='card-header'>
    <h2>Inscription</h2>
    </div>
    <div class='card-body'>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <div class='d-flex '>
        <div class="field mr-3">
          <%= f.text_field :first_name, placeholder: "Prénom" , class: "form-control " %>
        </div>
        <div class="field">
          <%= f.text_field :last_name, placeholder: "Nom", class: "form-control mb-3" %>
        </div>    
      </div>

      <div class="field d-flex justify-content-center">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 15em", placeholder: "Email", class: "form-control" %>
      </div>

      <div class="field mt-3 text-center">
        <label class='m-0'>Definir un mot de passe</label><br />
        <em class='form-text text-muted'>6 caractère minimum</em>
        <div class='d-flex  '>
          <div class="field mr-3">
            <%= f.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: "Mot de passe" %><br />
          </div>        
          <div class="field">
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", placeholder: "Confirmation" %>
          </div>
        </div>  
      </div>

      <div class='form-group pt-3'>
        <%= f.check_box :newsletter, {}, true, false%>
        <%= f.label :newsletter, 'S\'abonner à la newsletter'%>
      </div>       

      <div class="actions">
          <%= f.submit "Envoyer", class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>