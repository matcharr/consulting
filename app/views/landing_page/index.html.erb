<%= render 'banner_welcome'%>

<div class='container mt-5' style='height: 100%'>

  <div class='card'>
    <div class='card-header'>
      <h1 class='card-title'>Une évaluation porteuse de sense.</h1>
      <p class='card-text text-secondary'>Francis Alföldi travaille sur l'évaluation et ses pratiques dans le secteur social. Le cabinet Alföldi  est structuré en SAS.</p>
    </div>
    
    <div class='card-body d-flex flex-wrap justify-content-around'>
      <div class='align-self-center'>
        <h5>Un artisan du social vous propose</h5>
        <ul>
          <li> ses formations, </li>
          <li>des publications, </li>
          <li>des travaux de recherches, </li>
          <li>un accompagnement, </li>
          <li>du travail à la carte.</li>
        </ul>
      </div>
          <%= image_tag "francis_half.jpg", class: 'm-2 img-fluid border rounded', style: 'height: 15em;' %>
    </div>
  </div>
  <h1 class='text-secondary'>Dernière article :</h1>
  <div class='card'>
    <div class='card-header d-flex justify-content-between'>
      <h1 class='card-title'> <%= @article.title %> </h1>
      <% if current_user && current_user.administrator %>
        <div class='align-self-center d-flex'>
          <%= link_to "Editer", edit_article_path(@article.id), class: "btn btn-outline-info"%>
          <%= link_to "Supprimer", @article, method: :delete, class: "btn btn-outline-warning"%>      
        </div>
      <% end %>
    </div>
    <div class='card-body d-flex flex-wrap justify-content-around'>
      <p> <%= @article.content %>
    </div>
    <div class='card-footer'>
      <% @comments.each do |comment| %> 
        <div>
          <div>
            <h5> <%= comment.user.name %> </h5>
            <p> <%= comment.content %> </p>
          </div>
          <% if current_user && current_user == comment.user || current_user && current_user.administrator%>
            <div class='d-flex flex-column justify-content-center mr-auto'>
              <%= link_to "Editer", edit_comment_path(comment.id), class: "text-secondary"%>      
              <%= link_to "Supprimer", comment, method: :delete, class: "text-secondary"%>      
            </div>
          <% end %>
        </div>
        <hr/>        
      <% end%>
      <%= form_with model: @comment ,url: article_comments_path(@article.id) do |f| %>
        <div class="form_group">
          <label>Commenter :</label>
          <%unless current_user%>
            <p class='text-secondary'> Vous devez êtres connecté pour commenter<p>
          <%end%>
          <%= f.text_area :content, class: "w-100", style: "height: 4em"%>
        </div>
        <div class="form_group">
          <%= f.submit "Poster", class: "btn btn-primary"%>
        </div>
      <%end%>
    </div>
  </div>
</div>