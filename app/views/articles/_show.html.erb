  <div class='card my-3'>
    <div class='card-header d-flex justify-content-between'>
      <h1 class='card-title'> <%= article.title %> </h1>
      <% if current_user && current_user.administrator %>
        <div class='align-self-center d-flex'>
          <%= link_to "Editer", edit_article_path(article.id), class: "btn btn-outline-info"%>
          <%= link_to "Supprimer", article, method: :delete, class: "btn btn-outline-warning"%>      
        </div>
      <% end %>
    </div>
    <div class='card-body d-flex flex-wrap justify-content-around'>
      <p> <%= article.content %>
    </div>
    <div class='card-footer'>
      <div id="article#<%=article.id%>">
        <%= render 'comments/index', article: article%>
      </div>
      <%= form_with model: @comment ,url: article_comments_path(article.id) do |f| %>
        <div class="form_group">
          <label>Commenter :</label>
          <%unless current_user%>
            <p class='text-secondary'> Vous devez êtres connecté pour commenter<p>
          <%end%>
          <%= f.text_area :content, class: "w-100", style: "height: 4em"%>
        </div>
        <div class="form_group">
          <%= f.submit "Poster", class: "btn btn-primary"%>
        </div>
      <%end%>
    </div>
  </div>